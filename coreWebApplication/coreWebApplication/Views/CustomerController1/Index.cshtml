@{
    ViewData["Title"] = "index";
}

<h1>Index</h1>

<h3>@ViewBag.Message</h3>
<p>There are @ViewBag.CustomerCount customers added to the list</p>

<ul>
    @foreach(var item in ViewBag.CustomerList)
    {
        <li>@item.Id - @item.Name - @item.Amount</li>
    }
</ul>

<hr/>

@*HTML Helper*@
@Html.ActionLink("Details Page", "Details", "CustomerController1")

<br/>

@*Tag Helper*@
<a asp-controller="CustomerController1" asp-action="Message">Message</a>